<div class="box-header">
  <div class="box-title">
    {{t 'entry.media'}}
  </div>
</div>

<div class="box-body default-padding">
  {{#if model.isNew}}
    {{t 'entry.save_before_content'}}
  {{else}}
    <div class="media-items lineup-media clearfix">
      {{#each mediafiles itemController='lineup_mediafile'}}
        {{partial 'media_manager/file'}}
      {{/each}}

      <div class="media-item thumbnail-upload md">
        
        <div class="progress progress-striped" id="progress">
          <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
            <span class="sr-only"><span class="perc-text">60%</span> {{t 'perc_completed'}}</span>
          </div>
        </div>

        <div class="title">
          <i class="fa fa-upload"></i><br>
          {{t 'upload'}}
        </div>

        <input id="fileupload" type="file" name="files[]" multiple>

      </div>
    </div>
  {{/if}}
</div>