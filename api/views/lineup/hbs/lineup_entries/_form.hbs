<form class="caminio form-horizontal">

  <div class="form-group">

    <label class="col-md-2 control-label required">{{t 'entry.title'}}</label>
    <div {{bind-attr class=":col-md-10 titleError:field-with-error"}}>
      {{input valueBinding='curTranslation.title' class='form-control'}}
      {{#if titleError}}<span class="help-block">{{errors.title}}</span>{{/if}}
    </div>

  </div>

  <div class="form-group">

    <label class="col-md-2 control-label">{{t 'entry.description'}}</label>
    <div class="col-md-10">
      {{textarea valueBinding='curTranslation.content' class='form-control'}}
    </div>
    
  </div>

  <div class="form-group">

    <label class="col-md-2 control-label">{{t 'entry.meta_keywords'}}</label>
    <div class="col-md-10">
      {{input valueBinding='curTranslation.metaKeywords' class='form-control'}}
    </div>
    
  </div>

  <hr>

  <div class="form-group">

    <label class="col-md-2 control-label">{{t 'entry.author'}}</label>
    <div class="col-md-10">
      {{input valueBinding='author' class='form-control'}}
    </div>
    
  </div>

  <div class="form-group">

    <label class="col-md-2 control-label">{{t 'entry.director'}}</label>
    <div class="col-md-10">
      {{input valueBinding='director' class='form-control'}}
    </div>
    
  </div>

  <hr>

  <div class="form-group">

    <label class="col-md-2 control-label">{{t 'entry.price'}}</label>
    <div class="col-md-2">
      {{input valueBinding='model.priceExcl' class='form-control number-picker'}}
      <div class="help-block">{{t 'entry.price_excl'}}</div>
    </div>
    <div class="col-md-2">
      {{input valueBinding='model.currency' class='form-control'}}
      <div class="help-block">{{t 'entry.currency'}}</div>
    </div>

    <div class="col-md-2">
      {{input valueBinding='model.vat' class='form-control number-picker'}}
      <div class="help-block">{{t 'entry.vat'}}</div>
    </div>

    <div class="col-md-2">
      {{input valueBinding='model.priceIncl' class='form-control number-picker'}}
      <div class="help-block">{{t 'entry.price_incl'}}</div>
    </div>

  </div>

  <div class="form-group">

    <label class="col-md-2 control-label">{{t 'entry.in_stock'}}</label>
    <div class="col-md-2">
      {{input valueBinding='model.in_stock' class='form-control'}}
      <div class="help-block">{{t 'entry.in_stock_desc'}}</div>
    </div>

    <div class="col-md-8 control-label">
      {{input type='checkbox' checked=model.unlimited}}
      <label>{{t 'entry.unlimited'}}</label>
    </div>

  </div>

  <div class="form-group">

    <label class="col-md-2 control-label">{{t 'entry.categories'}}</label>
    <div class="col-md-10">
      {{view App.Select2TagView
            valueBinding='model.categories'
            tagsBinding='shopCategories'}}
    </div>
    
  </div>

  <div class="form-group">
    <div class="required-exp col-md-12 align-right">
      <span style="color: #d00">*</span>{{t required_fields}}
    </div>
  </div>

</form>