<li class="lineup-event">
  {{#if editMode}}
    <form class="caminio" {{action 'save' on='submit'}}>

      <div class="row">
        <div class="col-md-12">
          {{view App.Select2SelectView
                  class='fill-width'
                  promptTranslation='event.select_venue'
                  createTranslation='event.nothing_found_create_new'
                  createAction='createVenue'
                  contentBinding='parentController.availableVenues'
                  optionValuePath='content.id'
                  optionLabelPath='content.curTranslation.title'
                  selectionBinding='lineup_org'}}
        </div>
      </div>

      <div class="row">
        <div class="col-md-7 date">
          <div class="input-group">
            {{input valueBinding='startsDate' class="datepicker form-control" placeholderTranslation='event.starts_placeholder'}}
            <span class="input-group-addon datepicker">
              <i class="fa fa-calendar-o"></i>
            </span>
          </div>
        </div>
        <div class="col-md-5 time-prices">
          <div class="input-group">
            {{input valueBinding='startsTime' class="form-control" placeholderTranslation='event.starts_time_placeholder'}}
            <span class="input-group-addon">
              <i class="fa fa-clock-o"></i>
            </span>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <button class="btn icon-text pull-right">
            <i class="fa fa-save"></i>
            {{t 'save'}}
          </button>
          <button class="btn icon-text pull-right" {{action 'remove' this}} {{translateAttr title='delete'}}>
            <i class="fa fa-trash-o"></i>
          </button>
          <a href="#" class="edit-prices pull-right" {{action 'toggleEditMode'}}>
            {{t 'cancel'}}
          </a>
          <a href="#" class="edit-prices pull-right">
            {{t 'event.edit_prices'}}
          </a>
        </div>
      </div>
    </form>

  {{else}}
    <button class="btn pull-right" {{action 'toggleEditMode'}}>
      <i class="fa fa-pencil"></i>
    </button>
    <div class="venue">{{lineup_org.curTranslation.title}}</div>
    <time>{{formatDate starts format='ddd, DD. MMM. HH:mm'}}</time>
  {{/if}}
</li>