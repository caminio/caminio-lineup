<li class="lineup-event">
  {{#if editMode}}
    <form class="caminio" {{action 'save' on='submit'}}>

      <div class="row">
        <div class="col-md-12">
          {{view App.Select2SelectView
                  class='fill-width'
                  promptTranslation='event.select_venue'
                  createTranslation='event.nothing_found_create_new'
                  createAction='createVenue'
                  contentBinding='availableVenues'
                  optionValuePath='content.id'
                  allowCreate='true'
                  optionLabelPath='content.name'
                  selectionBinding='venue'}}
        </div>
      </div>

      <div class="row">
        <div class="col-md-7 date">
          <div class="input-group">
            {{input valueBinding='starts' class="form-control" placeholderTranslation='event.starts_placeholder'}}
            <span class="input-group-addon">
              <i class="fa fa-calendar-o"></i>
            </span>
          </div>
        </div>
        <div class="col-md-5 time-prices">
          <div class="input-group">
            {{input valueBinding='startsTime' class="form-control" placeholderTranslation='event.starts_time_placeholder'}}
            <span class="input-group-addon">
              <i class="fa fa-clock-o"></i>
            </span>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <button class="btn icon-text pull-right">
            <i class="fa fa-save"></i>
            {{t 'save'}}
          </button>
          <a href="#" class="edit-prices pull-right">
            {{t 'event.edit_prices'}}
          </a>
        </div>
      </div>
    </form>
    {{venue.name}}
  {{else}}
    <div class="venue">{{venue.name}}</div>
    <time>{{formatDate venue.starts format='LLLL'}}</time>
  {{/if}}
</li>