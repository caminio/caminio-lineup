<div class="box-header">
  <div class="box-title">

    {{#unless isNew}}
    <div class="ctrl">
      <button class="btn icon-text"
            {{action 'addEvent'}}>
        <i class="fa fa-plus"></i>
        {{t 'events.add'}}
      </button>
    </div>
    {{/unless}}
  
    {{t 'events'}}

  </div>
</div>

<div class="box-body default-padding">

  {{#if isNew}}
    <div class="big-desc">
      {{t 'entry.save_before_content'}}
    </div>
  {{else}}
    <ul class="events-list">
      {{#each arrangedEvents itemController='lineup_event'}}
        {{partial 'lineup_events/item'}}
      {{else}}
        <li class="lineup-event">
          <div class="venue">{{t 'event.no_yet'}}</div>
        </li>
      {{/each}}
    </ul>
  {{/if}}

</div>
