<section class="plain-wrapper">

  <header>
    <div class="box title-box website">
      <div class="main-ctrl">
        {{#link-to 'lineup_orgs.new' class="btn icon-text primary"}}
          <i class="fa fa-plus"></i>
          {{t 'org.create'}}
        {{/link-to}}
      </div>
      <h1>{{t 'org.title'}}</h1>

    </div>

  </header>

  <div class="row span-row">

    <div class="col-sidebar" id="search-entries">
      {{partial 'lineup_orgs/search'}}
      {{#if App.emberUser.isTrusted}}
      <div class="box fill-box margin-top">
        {{partial 'lineup/labels'}}
      </div>
      {{/if}}

    </div>

    <div class="col-table" id="entries-table">
      {{outlet 'table'}}
    </div>

  </div>

</section>
