<form class="caminio form-horizontal" {{action 'save' on='submit'}}>

  <div class="form-group">

    <label class="col-md-2 control-label required">{{t 'org.name'}}</label>
    <div {{bind-attr class=":col-md-10 nameError:field-with-error"}}>
      {{input valueBinding='curTranslation.title' class='form-control' id="entry-title"}}
      {{#if nameError}}<span class="help-block">{{errors.title}}</span>{{/if}}
    </div>

  </div>
  
  <div class="form-group">

    <label class="col-md-2 control-label">{{t 'org.type'}}</label>
    <div class="col-md-10">
      <div class="btn-group">
        <a href="#" {{bind-attr class=":btn :adapt-to-form isVenue:primary :icon-text"}}
                    {{action 'setType' 'venue'}}>
          <i class="fa fa-home"></i>
          {{t 'org.type.venue'}}
        </a>
        <a href="#" {{bind-attr class=":btn :adapt-to-form isEnsemble:primary :icon-text"}}
                    {{action 'setType' 'ensemble'}}>
          <i class="fa fa-group"></i>
          {{t 'org.type.ensemble'}}
        </a>
        <a href="#" {{bind-attr class=":btn :adapt-to-form isOrganizer:primary :icon-text"}}
                    {{action 'setType' 'organizer'}}>
          <i class="fa fa-cubes"></i>
          {{t 'org.type.organizer'}}
        </a>
      </div>
    </div>
    
  </div>

  <div class="form-group">

    <label class="col-md-2 control-label">{{t 'entry.description'}}</label>
    <div class="col-md-10 inline-editor">
      {{view App.CodeMirrorView
            valueBinding='curTranslation.content'}}
    </div>
    
  </div>

  <hr>

  <h4 class="mini-title">{{t 'org.contact'}}</h4>

  <div class="form-group">

    <label class="col-md-2 control-label">{{t 'org.email'}}</label>
    <div class="col-md-10">
      {{input valueBinding='email' class="form-control"}}
    </div>
  </div>

  <div class="form-group">

    <label class="control-label col-md-2">{{t 'org.phone'}}</label>
    <div class="col-md-10">
      {{input valueBinding='phone' class="form-control"}}
    </div>
    
  </div>

  <hr>

  <h4 class="mini-title">{{t 'org.address'}}</h4>

  <div class="form-group">

    <label class="col-md-2 control-label">{{t 'street'}}</label>
    <div class="col-md-10">
      {{input valueBinding='street' class='form-control'}}
    </div>
    
  </div>

  <div class="form-group">

    <label class="col-md-2 control-label">{{t 'city'}}</label>
    <div class="col-md-2">
      {{input valueBinding='zip' class='form-control' placeholderTranslation='zip'}}
    </div>
    
    <div class="col-md-8">
      {{input valueBinding='city' class='form-control'}}
    </div>

  </div>

  <div class="form-group">

    <label class="col-md-2 control-label">{{t 'state'}}</label>
    <div class="col-md-10">
      {{input valueBinding='state' class='form-control'}}
    </div>
    
  </div>

  <div class="form-group">
    <label class="col-md-2 control-label">{{t 'country'}}</label>
    <div class="col-md-10">
      {{view App.Select2CountryView
        valueBinding="country"
        class="fill-width"}}
    </div>
  </div>

  <hr>

  <div class="form-group">
    <div class="required-exp col-md-offset-2 col-md-4">
      <span style="color: #d00">*</span>{{t required_fields}}
    </div>
  </div>

  <input type="submit" class="hide">
</form>
