<section class="plain-wrapper default-max">

  <header>

    <div class="title-box">
      <div class="main-ctrl">

        <button class="btn transparent borderless icon-text"
                {{action 'cancelNewEntry'}}>
          <i class="fa fa-arrow-left"></i>
          {{t 'cancel'}}
        </button>
        
        <button {{bind-attr class='isDirty:primary :btn :icon-text'}}
                {{action 'save'}}>
          {{t 'save'}}
        </button>

      </div>

      <h1>
        <span class="desc">{{t 'person.title'}}</span><br>
        {{name}}
      </h1>

    </div>

  </header>

  <div class="row span-row">

    <div class="col-md-8">
      <div>
        {{partial 'lineup_people/form'}}
      </div>
    </div>

    <div class="col-md-4">

      <div class="box fill-box">
        {{view 'lineup_media'}}
      </div>

      <div class="box fill-box margin-top">
        {{partial 'lineup_people/links'}}
      </div>

    </div>

  </div>

</section>
